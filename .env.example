# BlaidAgent Environment Configuration
# Copy this to .env and fill in values (never commit .env)

# ===================
# REQUIRED - Database (PostgreSQL - auto-provided by Replit)
# ===================
DATABASE_URL=postgresql://user:password@host:5432/database
PGHOST=localhost
PGPORT=5432
PGUSER=user
PGPASSWORD=password
PGDATABASE=database

# ===================
# REQUIRED - Session Management
# ===================
SESSION_SECRET=your-session-secret-here-min-32-chars

# ===================
# Replit Environment (auto-populated)
# ===================
REPLIT_DOMAINS=your-repl.replit.dev
REPLIT_DEV_DOMAIN=your-dev-domain

# ===================
# OPTIONAL - Market Data Providers
# ===================
DATABENTO_API_KEY=
POLYGON_API_KEY=

# ===================
# OPTIONAL - AI/LLM
# ===================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ===================
# OPTIONAL - Broker Integration
# ===================
TRADOVATE_API_KEY=
TRADOVATE_API_SECRET=
TRADOVATE_ENVIRONMENT=demo

# ===================
# OPTIONAL - Observability
# ===================
LOG_LEVEL=info
SENTRY_DSN=

# ===================
# Runtime
# ===================
NODE_ENV=development
PORT=5000
